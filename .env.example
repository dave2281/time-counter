# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to git!

# Rails configuration
RAILS_ENV=production
SECRET_KEY_BASE=generate_with_rails_secret_or_openssl_rand_hex_64

# Database (if using external database instead of SQLite)
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Deployment configuration (for Kamal)
DEPLOY_SERVER_IP=your.server.ip.address
DEPLOY_HOST=your-domain.com
DOCKER_USERNAME=your-docker-username

# Kamal secrets (create .kamal/secrets file)
KAMAL_REGISTRY_PASSWORD=your_docker_hub_password
RAILS_MASTER_KEY=your_rails_master_key

# Email configuration (if needed)
# SMTP_ADDRESS=smtp.example.com
# SMTP_PORT=587
# SMTP_DOMAIN=example.com
# SMTP_USERNAME=your_email@example.com
# SMTP_PASSWORD=your_email_password

# Additional security
# SSL_REDIRECT=true
# FORCE_SSL=true