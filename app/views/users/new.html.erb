<% if flash[:alert] %>
  <div class="fixed top-4 right-4 z-50 bg-red-600/90 backdrop-blur text-white px-3 py-2 rounded-md shadow-lg text-sm">
    <%= flash[:alert] %>
  </div>
<% end %>
<% if flash[:notice] %>
  <div class="fixed top-4 right-4 z-50 bg-green-600/90 backdrop-blur text-white px-3 py-2 rounded-md shadow-lg text-sm">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="min-h-screen flex items-center justify-center p-4">
  <div class="max-w-sm w-full">
    
    <div class="text-center mb-6">
      <h1 class="text-2xl font-semibold text-white mb-1">Create Account</h1>
      <p class="text-gray-400 text-sm">Join TimeTracker</p>
    </div>

    <div class="glass-effect rounded-lg p-6">
      
      <%= form_for @user, class: "space-y-4" do |f| %>
        
        <% if @user.errors.any? %>
          <div class="bg-red-900/20 border border-red-700 rounded p-3 mb-4">
            <h3 class="text-red-400 font-medium mb-2 text-sm">Please fix:</h3>
            <ul class="text-red-300 text-xs space-y-1">
              <% @user.errors.full_messages.each do |message| %>
                <li>â€¢ <%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :email_address, class: "block text-xs font-medium text-gray-300 mb-1" do %>
            Email
          <% end %>
          <%= f.email_field :email_address, 
              class: "w-full bg-gray-900/50 border border-gray-600 rounded-md px-3 py-2 text-white placeholder-gray-500 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm",
              placeholder: "your@email.com" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-xs font-medium text-gray-300 mb-1" do %>
            Password
          <% end %>
          <%= f.password_field :password, 
              class: "w-full bg-gray-900/50 border border-gray-600 rounded-md px-3 py-2 text-white placeholder-gray-500 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm",
              placeholder: "Strong password" %>
        </div>

        <div>
          <%= f.submit "Create Account", 
              class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2.5 px-4 rounded-md transition-colors text-sm hover-lift" %>
        </div>
        
        <div class="text-center text-xs text-gray-500">
          Already have an account? 
          <%= link_to "Sign in", new_session_path, 
              class: "text-blue-400 hover:text-blue-300 transition-colors" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
