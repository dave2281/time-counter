<%= tag.div(flash[:alert], class: "text-red-600 font-semibold text-center py-2 px-4 mb-4 rounded-md") if flash[:alert] %>
<%= tag.div(flash[:notice], class: "text-green-600 font-semibold text-center py-2 px-4 mb-4 rounded-md") if flash[:notice] %>

<div class="flex items-center justify-center min-h-screen bg-gray-900">
  <div class="max-w-sm mx-auto bg-indigo-600 shadow-lg rounded-xl p-6 w-full sm:w-96">
    <%= form_for @user, class: "space-y-4" do |f| %>
      <h1 class="text-5xl md:text-3xl mb-7 font-bold text-center text-white">Sign Up</h1>

      <% if @user.errors.any? %>
        <div id="error_explanation" class="text-red-600 bg-red-200 p-4 mb-6 rounded-md">
          <h2 class="text-xl font-semibold mb-3"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul class="list-disc ml-5">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="text-center mt-4">
        <%= f.label :email_address, class: "text-white font-semibold" %><br>
        <%= f.text_field :email_address, class: "w-full px-4 py-3 bg-indigo-700 text-white rounded-md placeholder-indigo-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50", placeholder: "Enter your email address" %>
      </div>

      <div class="text-center mt-4">
        <%= f.label :password, class: "text-white font-semibold" %><br>
        <%= f.password_field :password, class: "w-full px-4 py-3 bg-indigo-700 text-white rounded-md placeholder-indigo-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50", placeholder: "Enter your password" %>
      </div>

      <div class="text-center mt-6">
        <%= f.submit "Sign Up", class: "w-full py-3 bg-indigo-500 text-white font-semibold rounded-md hover:bg-indigo-600 transition-all" %>
      </div>

      <div class="text-center mt-4">
        <%= link_to "Already have an account? Sign In", new_session_path, class: "text-indigo-400 hover:text-indigo-600 font-semibold" %>
      </div>
    <% end %>
  </div>
</div>
