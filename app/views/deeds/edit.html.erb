<% content_for :title, "Edit Cosmic Mission" %>

<div class="min-h-screen">
  <section class="text-white py-12 px-6">
    <div class="text-center mb-12">
      <h1 class="text-5xl md:text-7xl font-bold bg-gradient-to-r from-orange-400 via-red-500 to-pink-500 bg-clip-text mb-6 float-animation">
        🔧 EDIT COSMIC MISSION 🔧
      </h1>
      <p class="text-xl text-gray-300 font-light">Recalibrate your cosmic quest parameters</p>
    </div>
  </section>

  <div class="sticky top-0 z-50 bg-black/80 backdrop-blur-lg border-b border-white/10 rounded-b-3xl mx-4">
    <div class="container mx-auto px-6 py-6">
      <div class="flex justify-center gap-6">
        <%= link_to "👁️ View Mission", @deed,
          class: "px-8 py-3 text-sm font-semibold text-white bg-gradient-to-r from-blue-600 to-blue-700 rounded-2xl border border-blue-500/30 transition-all duration-300 hover:scale-105 text-center shadow-lg hover:shadow-blue-500/25" %>

        <%= link_to "🌌 Back to Galaxy", root_path,
          class: "px-8 py-3 text-sm font-semibold text-white bg-gradient-to-r from-gray-600 to-gray-700 rounded-2xl border border-gray-500/30 transition-all duration-300 hover:scale-105 text-center shadow-lg hover:shadow-gray-500/25" %>
      </div>
    </div>
  </div>

  <section class="container mx-auto px-6 py-12 text-white relative z-20">
    <div class="mt-8 mb-12">
      <div class="max-w-3xl mx-auto">
        <%= render "form", deed: @deed %>
      </div>
    </div>
  </section>
</div>

<style>
  .float-animation {
    animation: float 3s ease-in-out infinite;
  }
  
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
</style>
