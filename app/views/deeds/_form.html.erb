<div class="bg-gray-900 text-white flex flex-col items-center justify-center min-h-screen p-4">
  <%= form_with(model: deed) do |form| %>
    <div class="bg-gray-800 shadow-lg rounded-2xl p-6 w-xl max-w-md">
      <%= form.hidden_field :user_id, value: Current.user.id %>
      
      <div class="mt-1 text-center">
        <%= form.label :title, "Title", class: "text-2xl font-bold text-center text-blue-400" %>
        <%= form.text_field :title, class: "mt-1 block w-full p-4 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mt-4 text-center">
        <%= form.label :description, "Description", class: "text-blue-400 mt-2 text-center" %>
        <%= form.text_area :description, rows: 8, class: "mt-1 block w-full p-4 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="flex justify-center mt-4">
        <%= form.submit "Save Deed", class: "w-full py-3 px-6 bg-indigo-600 text-white rounded-lg shadow-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      
      <div class="mt-6 text-center">
        <%= link_to "Show this deed", @deed, class: "white-600 hover:text-gray-300" %> |
        <%= link_to "Back to deeds", root_path, class: "white-600 hover:text-gray-300" %>
      </div>
    </div>
  <% end %>
</div>