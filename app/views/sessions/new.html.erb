<!-- Flash messages -->
<% if flash[:alert] %>
  <div class="fixed top-4 right-4 z-50 bg-red-600/90 backdrop-blur text-white px-3 py-2 rounded-md shadow-lg text-sm">
    <%= flash[:alert] %>
  </div>
<% end %>
<% if flash[:notice] %>
  <div class="fixed top-4 right-4 z-50 bg-green-600/90 backdrop-blur text-white px-3 py-2 rounded-md shadow-lg text-sm">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="min-h-screen flex items-center justify-center p-4">
  <div class="max-w-sm w-full">
    
    <div class="text-center mb-6">
      <h1 class="text-2xl font-semibold text-white mb-1">Sign In</h1>
      <p class="text-gray-400 text-sm">Welcome back</p>
    </div>

    <div class="glass-effect rounded-lg p-6">
      
      <%= form_with url: session_path, class: "space-y-4" do |form| %>
        
        <div>
          <%= form.label :email_address, class: "block text-xs font-medium text-gray-300 mb-1" do %>
            Email
          <% end %>
          <%= form.email_field :email_address, 
              required: true, 
              autofocus: true, 
              autocomplete: "username", 
              placeholder: "your@email.com",
              value: params[:email_address],
              class: "w-full bg-gray-900/50 border border-gray-600 rounded-md px-3 py-2 text-white placeholder-gray-500 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
        </div>

        <div>
          <%= form.label :password, class: "block text-xs font-medium text-gray-300 mb-1" do %>
            Password
          <% end %>
          <%= form.password_field :password, 
              required: true, 
              autocomplete: "current-password", 
              placeholder: "Password",
              maxlength: 72,
              class: "w-full bg-gray-900/50 border border-gray-600 rounded-md px-3 py-2 text-white placeholder-gray-500 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
        </div>

        <div>
          <%= form.submit "Sign In", 
              class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2.5 px-4 rounded-md transition-colors text-sm hover-lift" %>
        </div>
        
        <div class="space-y-2 text-center text-xs">
          <%= link_to "Forgot password?", new_password_path, 
              class: "block text-blue-400 hover:text-blue-300 transition-colors" %>
          
          <div class="text-gray-500">
            Don't have an account? 
            <%= link_to "Sign up", signup_path, class: "text-blue-400 hover:text-blue-300 transition-colors" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>