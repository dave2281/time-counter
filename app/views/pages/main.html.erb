<!-- Profile Modal Checkbox -->
<input type="checkbox" id="profile-modal" class="hidden">

<!-- Profile Modal -->
<div class="transition-all duration-300" id="modal-overlay">
  <!-- Background blur -->
  <label for="profile-modal" class="absolute inset-0 bg-black bg-opacity-60 backdrop-blur-sm cursor-pointer"></label>
  
  <!-- Modal content -->
  <div class="bg-slate-800 rounded-xl shadow-2xl w-full max-w-md border border-slate-600 transform scale-95 transition-transform duration-300">
    <!-- Close button -->
    <label for="profile-modal" class="absolute top-4 right-4 text-slate-400 hover:text-white transition-colors cursor-pointer text-xl">
      ×
    </label>
    
    <div class="p-6">
      <h2 class="text-xl font-bold text-white mb-6">Profile Settings</h2>
      
      <%= form_with model: Current.user, url: update_profile_path, method: :patch, local: true, class: "space-y-4" do |form| %>
        <!-- Email Field -->
        <div>
          <label class="block text-sm font-medium text-slate-300 mb-2">Email</label>
          <input type="email" value="<%= Current.user.email_address %>" disabled 
                 class="w-full px-3 py-2 bg-slate-700 border border-slate-500 rounded-lg text-white disabled:opacity-50">
        </div>

        <!-- Password Fields -->
        <div class="space-y-3">
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Current Password</label>
            <%= form.password_field :current_password, placeholder: "Enter current password", 
                class: "w-full px-3 py-2 bg-slate-700 border border-slate-500 rounded-lg text-white placeholder-slate-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500" %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">New Password (optional)</label>
            <%= form.password_field :password, placeholder: "Enter new password", 
                class: "w-full px-3 py-2 bg-slate-700 border border-slate-500 rounded-lg text-white placeholder-slate-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500" %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Confirm New Password</label>
            <%= form.password_field :password_confirmation, placeholder: "Confirm new password", 
                class: "w-full px-3 py-2 bg-slate-700 border border-slate-500 rounded-lg text-white placeholder-slate-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500" %>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex gap-3 pt-4">
          <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium transition-colors">
            Update Profile
          </button>
          <label for="profile-modal" class="inline-block bg-slate-600 hover:bg-slate-700 text-white px-6 py-2 rounded-lg font-medium transition-colors text-center cursor-pointer">
            Cancel
          </label>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="min-h-screen" id="top">
  <!-- Compact header with actions -->
  <div class="bg-gray-900 border-b border-gray-800">
    <div class="container mx-auto max-w-6xl px-4 py-3">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="desktop-only px-3 py-1 text-xs bg-blue-600 text-white rounded-full">
            <%= Current.user.active_timers_count %>/3 timers
          </div>
          <div class="desktop-only px-3 py-1 text-xs bg-blue-600 text-white rounded-full">
            <%= Current.user.deeds.count %>/30 tasks
          </div>
          <h1 class="text-xl font-semibold text-white">Tasks</h1>
        </div>
        
        <div class="md:flex items-center gap-4">
          <%= link_to about_project_path, class: "text-sm text-gray-400 hover:text-white transition-colors" do %>
            About Project
          <% end %>
          <%= link_to contacts_path, class: "text-sm text-gray-400 hover:text-white transition-colors" do %>
            Contacts
          <% end %>
        </div>

        <div class="flex items-center gap-2">
          <!-- Profile Button -->
          <label for="profile-modal" class="px-3 py-1.5 text-sm bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-colors hover-lift cursor-pointer">
            Profile
          </label>
          <%= link_to new_deed_path, class: "px-4 py-1.5 text-sm bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-colors hover-lift" do %>
            <span class="mobile-only">New Task</span>
            <span class="desktop-only">New Task</span>
          <% end %>
          <%= button_to "Exit", session_path, method: :delete,
            class: "px-3 py-1.5 text-xs text-gray-400 hover:text-red-400 transition-colors" %>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto max-w-6xl py-4 px-4">
    <!-- Compact filter buttons -->
    <div class="flex justify-center flex-wrap gap-1 mb-4">
      <%= form_with url: root_path(params.permit(:show_just_created, :show_finished, :show_all_tasks, :show_running_timers)), method: :get, local: true, class: "inline" do %>
        <%= hidden_field_tag :show_finished, params[:show_finished], id: "show_finished_1" %>
        <%= hidden_field_tag :show_all_tasks, params[:show_all_tasks], id: "show_all_tasks_1" %>
        <%= hidden_field_tag :show_running_timers, params[:show_running_timers], id: "show_running_timers_1" %>
        <%= hidden_field_tag :show_just_created, params[:show_just_created] == 'true' ? 'false' : 'true', id: "show_just_created_1" %>
        <button type="submit" class="filter-btn <%= 'active' if params[:show_just_created] == 'true' %>">
          New
        </button>
      <% end %>

      <%= form_with url: root_path(params.permit(:show_just_created, :show_finished, :show_all_tasks, :show_running_timers)), method: :get, local: true, class: "inline" do %>
        <%= hidden_field_tag :show_just_created, params[:show_just_created], id: "show_just_created_2" %>
        <%= hidden_field_tag :show_all_tasks, params[:show_all_tasks], id: "show_all_tasks_2" %>
        <%= hidden_field_tag :show_running_timers, params[:show_running_timers], id: "show_running_timers_2" %>
        <%= hidden_field_tag :show_finished, params[:show_finished] == 'true' ? 'false' : 'true', id: "show_finished_2" %>
        <button type="submit" class="filter-btn <%= 'active' if params[:show_finished] == 'true' %>">
          Done
        </button>
      <% end %>
      
      <%= form_with url: root_path(params.permit(:show_just_created, :show_finished, :show_all_tasks, :show_running_timers)), method: :get, local: true, class: "inline" do %>
        <%= hidden_field_tag :show_just_created, params[:show_just_created], id: "show_just_created_3" %>
        <%= hidden_field_tag :show_finished, params[:show_finished], id: "show_finished_3" %>
        <%= hidden_field_tag :show_all_tasks, params[:show_all_tasks], id: "show_all_tasks_3" %>
        <%= hidden_field_tag :show_running_timers, params[:show_running_timers] == 'true' ? 'false' : 'true', id: "show_running_timers_3" %>
        <button type="submit" class="filter-btn <%= 'active' if params[:show_running_timers] == 'true' %>">
          Active
        </button>
      <% end %>

      <%= form_with url: root_path(params.permit(:show_just_created, :show_finished, :show_all_tasks, :show_running_timers)), method: :get, local: true, class: "inline" do %>
        <%= hidden_field_tag :show_just_created, params[:show_just_created], id: "show_just_created_4" %>
        <%= hidden_field_tag :show_finished, params[:show_finished], id: "show_finished_4" %>
        <%= hidden_field_tag :show_running_timers, params[:show_running_timers], id: "show_running_timers_4" %>
        <%= hidden_field_tag :show_all_tasks, params[:show_all_tasks] == 'true' ? 'false' : 'true', id: "show_all_tasks_4" %>
        <button type="submit" class="filter-btn <%= 'active' if params[:show_all_tasks] == 'true' %>">
          All
        </button>
      <% end %>
    </div>

    <!-- Responsive task grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-3 mb-6">
      <% @records.each do |deed| %>
        <%= link_to deed, class: "block glass-effect rounded-lg p-4 hover:bg-gray-800/50 transition-all hover-lift group" do %>
          <div class="flex justify-between items-center mb-2">
            <div class="flex items-center space-x-2">
              <% if deed.timer_running? %>
                <div class="w-1.5 h-1.5 bg-green-400 rounded-full"></div>
                <span class="text-green-400 text-xs font-medium">Active</span>
              <% elsif deed.finished? %>
                <div class="w-1.5 h-1.5 bg-gray-400 rounded-full"></div>
                <span class="text-gray-400 text-xs">Done</span>
              <% else %>
                <div class="w-1.5 h-1.5 bg-blue-400 rounded-full"></div>
                <span class="text-blue-400 text-xs">Ready</span>
              <% end %>
            </div>
            <span class="text-gray-500 text-xs font-mono">
              <%= deed.total_time.presence || "00:00" %>
            </span>
          </div>
          
          <h3 class="text-sm font-medium text-white mb-2 leading-tight group-hover:text-blue-300 transition-colors line-clamp-2">
            <%= deed.title %>
          </h3>
          
          <% if deed.description.present? %>
            <p class="text-gray-400 text-xs mb-2 line-clamp-2">
              <%= deed.description %>
            </p>
          <% end %>
          
          <div class="text-xs text-gray-500">
            Today: <%= deed.today.presence || "00:00" %>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Enhanced pagination -->
    <% if @pagy.pages > 1 %>
      <div class="flex justify-center mb-4">
        <nav class="flex items-center gap-1">
          <!-- Previous button -->
          <% if @pagy.prev %>
            <%= link_to root_path(params.permit(:show_just_created, :show_finished, :show_all_tasks, :show_running_timers, :limit).merge(page: @pagy.prev)), 
                class: "pagination-btn pagination-nav" do %>
              <span class="sr-only">Previous</span>
              ←
            <% end %>
          <% else %>
            <span class="pagination-btn pagination-nav pagination-disabled">
              <span class="sr-only">Previous</span>
              ←
            </span>
          <% end %>

          <!-- Page numbers -->
          <% @pagy.series.each do |item| %>
            <% if item.is_a?(Integer) %>
              <% if item == @pagy.page %>
                <span class="pagination-btn pagination-current"><%= item %></span>
              <% else %>
                <%= link_to item, root_path(params.permit(:show_just_created, :show_finished, :show_all_tasks, :show_running_timers, :limit).merge(page: item)), 
                    class: "pagination-btn" %>
              <% end %>
            <% elsif item == :gap %>
              <span class="pagination-btn pagination-gap">…</span>
            <% end %>
          <% end %>

          <!-- Next button -->
          <% if @pagy.next %>
            <%= link_to root_path(params.permit(:show_just_created, :show_finished, :show_all_tasks, :show_running_timers, :limit).merge(page: @pagy.next)), 
                class: "pagination-btn pagination-nav" do %>
              <span class="sr-only">Next</span>
              →
            <% end %>
          <% else %>
            <span class="pagination-btn pagination-nav pagination-disabled">
              <span class="sr-only">Next</span>
              →
            </span>
          <% end %>
        </nav>
      </div>
    <% end %>

    <!-- Empty state -->
    <% if @records.empty? %>
      <div class="text-center py-12">
        <div class="text-4xl text-gray-600 mb-3">📝</div>
        <h3 class="text-lg font-medium text-gray-300 mb-2">No tasks found</h3>
        <p class="text-gray-500 mb-4 text-sm">Create your first task to get started</p>
        <%= link_to "Create Task", new_deed_path, 
            class: "inline-block px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm rounded-lg transition-colors hover-lift" %>
      </div>
    <% end %>
  </div>
</div>