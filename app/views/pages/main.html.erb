<div class="min-h-screen">
  <!-- Compact header with actions -->
  <div class="bg-gray-900 border-b border-gray-800">
    <div class="container mx-auto max-w-6xl px-4 py-3">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="desktop-only px-3 py-1 text-xs bg-blue-600 text-white rounded-full">
            <%= Current.user.active_timers_count %>/3 timers
          </div>
          <div class="desktop-only px-3 py-1 text-xs bg-blue-600 text-white rounded-full">
            <%= Current.user.deeds.count %>/30 tasks
          </div>
          <h1 class="text-xl font-semibold text-white">Tasks</h1>
        </div>
        
        <div class="md:flex items-center gap-4">
          <%= link_to about_project_path, class: "text-sm text-gray-400 hover:text-white transition-colors" do %>
            About Project
          <% end %>
          <%= link_to contacts_path, class: "text-sm text-gray-400 hover:text-white transition-colors" do %>
            Contacts
          <% end %>
        </div>

        <div class="flex items-center gap-2">
          <%= link_to new_deed_path, class: "px-4 py-1.5 text-sm bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-colors hover-lift" do %>
            <span class="mobile-only">New Task</span>
            <span class="desktop-only">New Task</span>
          <% end %>
          <%= button_to "Exit", session_path, method: :delete,
            class: "px-3 py-1.5 text-xs text-gray-400 hover:text-red-400 transition-colors" %>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto max-w-6xl py-4 px-4">
    <!-- Compact filter buttons -->
    <div class="flex justify-center flex-wrap gap-1 mb-4">
      <%= form_with url: root_path(params.permit(:show_just_created, :show_finished, :show_all_tasks, :show_running_timers)), method: :get, local: true, class: "inline" do %>
        <%= hidden_field_tag :show_finished, params[:show_finished] %>
        <%= hidden_field_tag :show_all_tasks, params[:show_all_tasks] %>
        <%= hidden_field_tag :show_running_timers, params[:show_running_timers] %>
        <%= hidden_field_tag :show_just_created, params[:show_just_created] == 'true' ? 'false' : 'true' %>
        <button type="submit" class="filter-btn <%= 'active' if params[:show_just_created] == 'true' %>">
          New
        </button>
      <% end %>

      <%= form_with url: root_path(params.permit(:show_just_created, :show_finished, :show_all_tasks, :show_running_timers)), method: :get, local: true, class: "inline" do %>
        <%= hidden_field_tag :show_just_created, params[:show_just_created] %>
        <%= hidden_field_tag :show_all_tasks, params[:show_all_tasks] %>
        <%= hidden_field_tag :show_running_timers, params[:show_running_timers] %>
        <%= hidden_field_tag :show_finished, params[:show_finished] == 'true' ? 'false' : 'true' %>
        <button type="submit" class="filter-btn <%= 'active' if params[:show_finished] == 'true' %>">
          Done
        </button>
      <% end %>
      
      <%= form_with url: root_path(params.permit(:show_just_created, :show_finished, :show_all_tasks, :show_running_timers)), method: :get, local: true, class: "inline" do %>
        <%= hidden_field_tag :show_just_created, params[:show_just_created] %>
        <%= hidden_field_tag :show_finished, params[:show_finished] %>
        <%= hidden_field_tag :show_all_tasks, params[:show_all_tasks] %>
        <%= hidden_field_tag :show_running_timers, params[:show_running_timers] == 'true' ? 'false' : 'true' %>
        <button type="submit" class="filter-btn <%= 'active' if params[:show_running_timers] == 'true' %>">
          Active
        </button>
      <% end %>

      <%= form_with url: root_path(params.permit(:show_just_created, :show_finished, :show_all_tasks, :show_running_timers)), method: :get, local: true, class: "inline" do %>
        <%= hidden_field_tag :show_just_created, params[:show_just_created] %>
        <%= hidden_field_tag :show_finished, params[:show_finished] %>
        <%= hidden_field_tag :show_running_timers, params[:show_running_timers] %>
        <%= hidden_field_tag :show_all_tasks, params[:show_all_tasks] == 'true' ? 'false' : 'true' %>
        <button type="submit" class="filter-btn <%= 'active' if params[:show_all_tasks] == 'true' %>">
          All
        </button>
      <% end %>
    </div>

    <!-- Responsive task grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-3 mb-6">
      <% @records.each do |deed| %>
        <%= link_to deed, class: "block glass-effect rounded-lg p-4 hover:bg-gray-800/50 transition-all hover-lift group" do %>
          <div class="flex justify-between items-center mb-2">
            <div class="flex items-center space-x-2">
              <% if deed.timer_running? %>
                <div class="w-1.5 h-1.5 bg-green-400 rounded-full"></div>
                <span class="text-green-400 text-xs font-medium">Active</span>
              <% elsif deed.finished? %>
                <div class="w-1.5 h-1.5 bg-gray-400 rounded-full"></div>
                <span class="text-gray-400 text-xs">Done</span>
              <% else %>
                <div class="w-1.5 h-1.5 bg-blue-400 rounded-full"></div>
                <span class="text-blue-400 text-xs">Ready</span>
              <% end %>
            </div>
            <span class="text-gray-500 text-xs font-mono">
              <%= deed.total_time.presence || "00:00" %>
            </span>
          </div>
          
          <h3 class="text-sm font-medium text-white mb-2 leading-tight group-hover:text-blue-300 transition-colors line-clamp-2">
            <%= deed.title %>
          </h3>
          
          <% if deed.description.present? %>
            <p class="text-gray-400 text-xs mb-2 line-clamp-2">
              <%= deed.description %>
            </p>
          <% end %>
          
          <div class="text-xs text-gray-500">
            Today: <%= deed.today.presence || "00:00" %>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Enhanced pagination -->
    <% if @pagy.pages > 1 %>
      <div class="flex justify-center mb-4">
        <nav class="flex items-center gap-1">
          <!-- Previous button -->
          <% if @pagy.prev %>
            <%= link_to root_path(params.permit(:show_just_created, :show_finished, :show_all_tasks, :show_running_timers, :limit).merge(page: @pagy.prev)), 
                class: "pagination-btn pagination-nav" do %>
              <span class="sr-only">Previous</span>
              ‚Üê
            <% end %>
          <% else %>
            <span class="pagination-btn pagination-nav pagination-disabled">
              <span class="sr-only">Previous</span>
              ‚Üê
            </span>
          <% end %>

          <!-- Page numbers -->
          <% @pagy.series.each do |item| %>
            <% if item.is_a?(Integer) %>
              <% if item == @pagy.page %>
                <span class="pagination-btn pagination-current"><%= item %></span>
              <% else %>
                <%= link_to item, root_path(params.permit(:show_just_created, :show_finished, :show_all_tasks, :show_running_timers, :limit).merge(page: item)), 
                    class: "pagination-btn" %>
              <% end %>
            <% elsif item == :gap %>
              <span class="pagination-btn pagination-gap">‚Ä¶</span>
            <% end %>
          <% end %>

          <!-- Next button -->
          <% if @pagy.next %>
            <%= link_to root_path(params.permit(:show_just_created, :show_finished, :show_all_tasks, :show_running_timers, :limit).merge(page: @pagy.next)), 
                class: "pagination-btn pagination-nav" do %>
              <span class="sr-only">Next</span>
              ‚Üí
            <% end %>
          <% else %>
            <span class="pagination-btn pagination-nav pagination-disabled">
              <span class="sr-only">Next</span>
              ‚Üí
            </span>
          <% end %>
        </nav>
      </div>
    <% end %>

    <!-- Empty state -->
    <% if @records.empty? %>
      <div class="text-center py-12">
        <div class="text-4xl text-gray-600 mb-3">üìù</div>
        <h3 class="text-lg font-medium text-gray-300 mb-2">No tasks found</h3>
        <p class="text-gray-500 mb-4 text-sm">Create your first task to get started</p>
        <%= link_to "Create Task", new_deed_path, 
            class: "inline-block px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm rounded-lg transition-colors hover-lift" %>
      </div>
    <% end %>
  </div>
</div>